<section class="section" data-section-id="{{ section.id }}">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <header class="section__header">
        <h2 class="section__title heading h3">{{ section.settings.title | escape }}</h2>
      </header>
    {%- endif -%}

    <div class="povezave-zbirk">
      {%- for block in section.blocks -%}
        {% assign collection = block.settings.collection %}
        <a href="{{ collection.url }}" class="povezava-zbirke" {{ block.shopify_attributes }}>
          {%- if collection.image -%}
            <div id="block-{{ block.id }}" class="posoda-slike-zbirke">
              <div class="slika-zbirke">
                {{ collection.image | img_url: '62x' | img_tag: collection.title, class: 'slika-zbirke', loading: 'lazy', sizes: '280px', widths: '280,560' }}
              </div>
            </div>

            <style>
              #block-{{ block.id }} .slika-zbirke {
                max-height: 62px;
              }
.povezave-zbirk {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.povezava-zbirke {
  width: 19.8%; 
  display: flex;
  flex-direction: row;
  align-items: center;
  text-decoration: none;
  color: inherit;
  box-sizing: border-box;
  border: 1px solid var(--border-color);
    background: white;
    line-height: 1;
    font-size: 15px;
    padding: 0px 2px;
  font-weight:500;
  margin-bottom:4px
}

.posoda-slike-zbirke {
  width: auto;
  height: 62px; 
  overflow: hidden;
}

.slika-zbirke {
  height: 100%; 
  width: auto;
}

.naslov-zbirke {
  margin-left: 10px;
}
              

@media (max-width: 768px) {
  .povezava-zbirke {
    width: 100%;margin-right: 0px;
    margin-bottom: 0px;
  }

  
}

              
            </style>
          {%- endif -%}

          <div class="naslov-zbirke">{{ collection.title | escape }}</div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Kolekcija vodoravni",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Kolekcija vodoravni"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Custom",
      "name": "Kolekcija List",
      "settings": {},
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
